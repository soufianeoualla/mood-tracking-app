generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Feeling {
  JOYFUL
  DOWN
  ANXIOUS
  CALM
  EXCITED
  FRUSTRATED
  LONELY
  GRATEFUL
  OVERWHELMED
  MOTIVATED
  IRRITABLE
  PEACEFUL
  TIRED
  HOPEFUL
  CONFIDENT
  STRESSED
  CONTENT
  DISAPPOINTED
  OPTIMISTIC
  RESTLESS
}

// Usage

model User {
  id                 Int         @id @default(autoincrement())
  name               String?
  email              String      @unique
  password           String?
  cover              String?
  onboardingComplete Boolean     @default(false)
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  MoodEntry          MoodEntry[]
}

model MoodEntry {
  id         Int       @id @default(autoincrement())
  userId     Int
  mood       Int
  comment    String
  feelings   Feeling[]
  sleepHours Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}
